{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types" // Ensure this includes your types directory if needed
        ],
        "baseUrl": "src",
        "paths": {
            "@pages/*": ["pages/*"],
            "@components/*": ["Components/*"],
            "@types/*": ["types/*"],
            "@assets/*": ["assets/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "./src/*", "src/Components/Model/ModelSubmitBtn/index"],
    "exclude": ["node_modules"]
}
